{{!
Re-usable card for linking to posts
}}
<article class="gh-card {{post_class}}">
  <a class="gh-card-link" href="{{url}}">
    <div class="gh-card-content">
      {{#primary_tag}}
        <div class="primary-tag">
          <a href="{{url}}">
            {{name}}
          </a>
        </div>
      {{/primary_tag}}
      <h2 class="gh-card-title">
        {{title}}
      </h2>
      <span class="gh-author-meta">
        {{authors}}
      </span>
      <span class="gh-card-meta">
        <time datetime="{{date format="YYYY-MM-DD"}}">
          {{date format="D MMM YYYY"}}
        </time>
      </span>
      {{#if feature_image}}
        <img
          class="gh-card-image"
          srcset="{{img_url feature_image size="s"}}
             300w,
            {{img_url feature_image size="m"}}
             600w,
            {{img_url feature_image size="l"}}
             1000w,
            {{img_url feature_image size="xl"}}
             2000w"
          sizes="(max-width: 1000px) 400px, 700px"
          src="{{img_url feature_image size="m"}}"
          alt="{{title}}"
        />
      {{/if}}
      <p>
        {{excerpt}}
      </p>
      <strong>
        Read more
      </strong>
    </div>
  </a>
</article>